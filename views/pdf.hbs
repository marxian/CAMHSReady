<html>
<head>
  <style>
    {{{styles}}}
    body, h1, h2 {
      font-family: sans-serif !important;
    }
    #export {
      border: none;
    }
    #export li {
      border:none
    }
    .checklist-export {
      border: 2px solid;
      border-radius: 0.5em;
    }
    .export-header > * + * > * {
      margin-left: 2em !important;
    }

  </style>
</head>
<body>
  <div role="main">
    <div class="content">
      <div id="export" aria-hidden="true">
      <div class="group-left group-top export-header">
        <div style="width: 40%">
          <div>
            <img src="http://www.camhsready.org/images/logo.png" />
            <h1>My Checklist</h1>
          </div>
        </div>
        <div style="width: 60%">
          <div>
            <section>
              <h2>Appointment details</h2>
              <dl class="contenteditable">
                <dt>Who</dt>
                <dd contenteditable="true" role="textbox" aria-multiline="true" aria-label="the person you're meeting"> </dd>
                <dt>Where</dt>
                <dd contenteditable="true" role="textbox" aria-multiline="true" aria-label="the place you'll meet">{{surgery.title}} </dd>
                <dt>When</dt>
                <dd contenteditable="true" role="textbox" aria-multiline="true" aria-label="the date and time of your appointment"> </dd>
              </dl>
            </section>
          </div>
        </div>
      </div>
        <section>
          <h2>Things I want to talk about</h2>
          <div class="checklist-export">
            <ol>
              {{#each symptoms}}
              <li><i>{{math @index "+" 1}}</i> {{{this}}}</li>
              {{/each}}
            </ol>
          </div>
        </section>
        {{#if supplementary}}
        <section class="supplementary_questions">
          {{#each supplementary}}
            <div ng-repeat="s in supplementary">
              <h2>{{this.title}}</h2>
              <p><em>{{this.rubric}}</em></p>
              <div class="tall notes">{{this.answer}}</div>
            </div>
          {{/each}}
        </section>
        {{/if}}
        <section>
          <h2>My notes</h2>
          <p><em>A place to record notes of what you heard in your appointment.</em></p>
          <div  contenteditable="true" role="textbox" aria-multiline="true" aria-label="reflections on my checklist"></div>
        </section>
      </div>
    </div>
  </div>
</body>
</html>